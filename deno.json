{
  "$schema": "https://deno.land/x/deno@v1.32.3/cli/schemas/config-file.v1.json",
  "lock": false,
  "tasks": {
    "dev": "deno run --allow-read --allow-env --allow-net --allow-ffi --unstable --watch src/server.ts",
    "test": "deno test"
  },
  "imports": {
    "@/": "./src/"
  },
  "lint": {
    "include": ["src/"],
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-explicit-any"]
    }
  },
  "fmt": {
    "include": ["src/"],
    "useTabs": false,
    "lineWidth": 120,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve"
  }
}